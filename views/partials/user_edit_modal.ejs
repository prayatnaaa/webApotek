<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit User</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/user?_method=PUT" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Nama</label>
            <input
              type="text"
              class="form-control nama"
              name="nama"
              nama="Enter Nama"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Password</label>
            <input
              type="text"
              class="form-control password"
              name="password"
              nama="Enter Nama"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Umur</label>
            <input
              type="number"
              class="form-control umur"
              name="umur"
              nama="Enter Umur"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Email</label>
            <input
              type="text"
              class="form-control email"
              name="email"
              nama="Enter Email"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">No Telepon</label>
            <input
              type="number"
              class="form-control no_telp"
              name="no_telp"
              nama="Enter No Telepon"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Alamat</label>
            <textarea
              type="text"
              class="form-control alamat"
              name="alamat"
              nama="Enter Alamat"
              rows="3"
              required
            ></textarea>
          </div>
          <div class="form-group">
            <label for="name">Tipe User</label>
            <div class="radio inline">
                <input type="radio" class="userType" name="userType" id="userTypeUser" value="customer">
                <label for="userType"> Customer</label>
            </div>
            <div class="radio inline">
                <input type="radio" name="userType" class="userType" id="userTypeAdmin" value="admin">
                <label for="userType"> Admin</label>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-success">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>