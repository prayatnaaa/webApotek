<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Resep</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/resep?_method=PUT" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Nama Pasien</label>
            <input
              type="text"
              class="form-control namaPasien"
              name="namaPasien"
              nama="Enter Nama Pasien"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Nama Dokter</label>
            <input
              type="text"
              class="form-control namaDokter"
              name="namaDokter"
              nama="Enter Nama Dokter"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Kontak Dokter</label>
            <input
              type="number"
              class="form-control kontakDokter"
              name="kontakDokter"
              nama="Enter Nomor Dokter"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Deskripsi</label>
            <input
              type="text"
              class="form-control deskripsi"
              name="deskripsi"
              nama="Enter Deskripsi"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Laporan Dokter</label>
            <input
              type="text"
              class="form-control laporanDokter"
              name="laporanDokter"
              nama="Enter Laporan Dokter"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Dosis</label>
            <input
              type="number"
              class="form-control dosis"
              name="dosis"
              nama="Enter Dosis"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-success">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>