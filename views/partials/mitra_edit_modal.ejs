<!-- Modal -->
<div
  class="modal fade"
  id="edit-modal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Mitra</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/mitra?_method=PUT" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Nama</label>
            <input
              type="text"
              class="form-control nama"
              name="nama"
              nama="Enter Nama"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Alamat</label>
            <input
              type="text"
              class="form-control alamat"
              name="alamat"
              nama="Enter Alamat"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Kontak</label>
            <input
              type="number"
              class="form-control kontak"
              name="kontak"
              nama="Enter Nomor"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Email</label>
            <input
              type="text"
              class="form-control email"
              name="email"
              nama="Enter Email"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Contact Person</label>
            <input
              type="text"
              class="form-control"
              id="namaCP"
              name="namaCP"
              placeholder="Masukan Nama"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Alamat Contact Person</label>
            <input
              type="text"
              class="form-control"
              id="alamatCP"
              name="alamatCP"
              placeholder="Masukan Alamat"
              required
            />
          </div>
          <div class="form-group">
            <label for="name">Nomor Contact Person</label>
            <input
              type="number"
              class="form-control"
              id="kontakCP"
              name="kontakCP"
              placeholder="Masukan Nomor"
              required
            />
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-success">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>